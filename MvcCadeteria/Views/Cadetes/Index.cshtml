
@model List<CdtViewModel>

@{
    ViewData["Title"] = "Index";
    //Console.WriteLine("Id     |Nombre      |domicilio     |telefono   ");
    var cont=0;
    string aux="";
    var clase="";
}
<p>@ViewBag.mensaje</p>
<h1>LISTADO DE CADETES</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" >Alta Cadete</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <p>Id</p>
            </th>
            <th>
                <p>Nombres</p>
            </th>
            <th>
                <p>Domicilio</p>
            </th>
            <th>
                <p>Telefono</p>
            </th>
            <th>
                <p>Acci√≥n</p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr@{
                if(cont==0){
                    aux=item.id;
                    cont++;
                }
                if(item.id!=aux){ 
                    cont++;
                    aux=item.id;
                }
                if(cont%2==0){
                    clase="distinto";
                }else{
                    clase="";
                }
            }
        class="@clase">
            <td>
                <p>@item.id</p>
            </td>
            <td>
                <p>@item.nombre</p>
            </td>
            <td>
                <p>@item.domicilio</p>
            </td>
            <td>
                <p>@item.telefono</p>
            </td>
            <td>
                <a asp-action="Info" asp-route-id="@item.id">Info</a> |
                <a asp-action="Editar" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
