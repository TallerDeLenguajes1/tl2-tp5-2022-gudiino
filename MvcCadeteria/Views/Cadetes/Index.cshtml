@model List<CdtViewModel>

@{
    ViewData["Title"] = "Index";
    //Console.WriteLine("Id     |Nombre      |Calle              |Numero       |Telefono");
}

<h1>LISTADO DE CADETES</h1>

<p>
    <a asp-action="Create">Alta Cadete</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <p>Id</p>
            </th>
            <th>
                <p>Nombre</p>
            </th>
            <th>
                <p>Calle</p>
            </th>
            <th>
                <p>Numero</p>
            </th>
            <th>
                <p>Telefono</p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <p>@item.id</p>
            </td>
            <td>
                <p>@item.nombre</p>
            </td>
            <td>
                <p>@item.calle</p>
            </td>
            <td>
                <p>@item.numero</p>
            </td>
            <td>
                <p>@item.telefono</p>
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
