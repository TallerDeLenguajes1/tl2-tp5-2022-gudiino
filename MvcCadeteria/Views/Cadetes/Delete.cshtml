@model MvcCadeteria.ViewsModels.EditarCdtViewModel

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar Cadete</h1>

<h3>¿Esta seguro de eliminar al cadete?</h3>
<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>NOMBRE</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.nombre</p>
        </dd>
        <dt class = "col-sm-2">
            <p>DOMICILIO</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.domicilio</p>
        </dd>
        <dt class = "col-sm-2">
            <p>TELÉFONO</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.telefono</p>
        </dd>
        <dt class = "col-sm-2">
            <p>ID SUCURSAL</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.sucursal</p>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" for="id" />
        <input type="submit" value="SI" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">NO</a>
    </form>
</div>
