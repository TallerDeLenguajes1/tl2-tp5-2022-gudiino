@model MvcCadeteria.ViewModels.AltaCdtViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Nuevo Cadete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.NombreCadete" class="control-label"></label>
                <input asp-for="@Model.NombreCadete" class="form-control" />
                <span asp-validation-for="@Model.NombreCadete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Direccion" class="control-label"></label>
                <input asp-for="@Model.Direccion" class="form-control" />
                <span asp-validation-for="@Model.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Numero" class="control-label"></label>
                <input asp-for="@Model.Numero" class="form-control" />
                <span asp-validation-for="@Model.Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Telefono" class="control-label"></label>
                <input asp-for="@Model.Telefono" class="form-control" />
                <span asp-validation-for="@Model.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

