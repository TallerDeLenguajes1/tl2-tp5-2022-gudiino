@model MvcCadeteria.ViewsModels.EditarPd2ViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Cambio del Estado del Pedido</h1>
<hr/>
<div>
    <dl class="row">
        <h4>Datos del Pedido:</h4>
        <dt class = "col-sm-2">
            <p>Id Pedido</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.id_pd2</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Observacion Pedido</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.obs</p>
        </dd>
         <dt class = "col-sm-2">
            <p>Estado Actual Pedido:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Enum.GetName(typeof(Pedido.Estados),Model.estado)</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Nombre Cliente:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.cli_nom</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Dirección:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.Direccion</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Teléfono:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.Telefono</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Detalle Dirección:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.detalle_direccion</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Id Cadete:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.id_cdt</p>
        </dd>
       <dt class = "col-sm-2">
            <p>Nombre Cadete:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.cdt_nom</p>
        </dd>
    </dl>
    <div class="row">
    <div class="col-md-4">
        <form asp-action="CbioEsta2Pd2SelecConfirm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.id_pd2" />
            <div class="form-group">
                <label asp-for="@Model.estado" class="control-label"><h5>Seleccione nuevo Estado</h5></label><br>
                <input type="radio" asp-for="@Model.estado"  value="2"/> Entregado<br>
                <input type="radio" asp-for="@Model.estado"  value="3"/> Cancelado<br>
                <span asp-validation-for="@Model.estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p></p>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> | <a asp-action="Index" class="btn btn-primary">Volver</a>
            </div>
        </form>
    </div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
