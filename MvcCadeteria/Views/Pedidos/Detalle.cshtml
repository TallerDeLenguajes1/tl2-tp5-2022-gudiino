@model Pd2ViewModel

@{
    ViewData["Title"] = "Detalles";
}

<h1>Información del Pedido</h1>

<div>
    <h4></h4>
    <hr/>
    <dl class="row">
        <h4>Datos del Pedido:</h4>
        <dt class = "col-sm-2">
            <p>Observacion Pedido</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.obs</p>
        </dd>
         <dt class = "col-sm-2">
            <p>Estado Pedido:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Enum.GetName(typeof(Pedido.Estados),Model.estado)</p>
        </dd>
        <h4>Datos del Cliente</h4>
        <dt class = "col-sm-2">
            <p>Nombre:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.cli_nom</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Dirección:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.Direccion</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Teléfono:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.Telefono</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Detalle Dirección:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.detalle_direccion</p>
        </dd>
        <h4>Datos del Cadete a cargo</h4>
       <dt class = "col-sm-2">
            <p>Nombre:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.cdt_nom</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Teléfono:</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.cdt_tel</p>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id_pd2" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-primary">Volver</a>
</div>
