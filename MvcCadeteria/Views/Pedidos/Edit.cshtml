@model Pedido

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.id_pd2" />
            <div class="form-group">
                <label asp-for="@Model.detalle_pedido" class="control-label" ></label>
                <input asp-for="@Model.detalle_pedido" class="form-control" value="@Model.detalle_pedido"/>
                <span asp-validation-for="@Model.detalle_pedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.id_cli" class="control-label"></label>
                <input asp-for="@Model.id_cli" class="form-control" value="@Model.id_cli"/>
                <span asp-validation-for="@Model.id_cli" class="text-danger"></span>
            </div>
            <!--<div class="form-group">
                <label asp-for="cadete" class="control-label"></label>
                <input asp-for="cadete" class="form-control" />
                <span asp-validation-for="cadete" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label asp-for="@Model.estado_pedido" class="control-label"></label>
                <input asp-for="@Model.estado_pedido" class="form-control" value="@Model.estado_pedido" />
                <span asp-validation-for="@Model.estado_pedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
