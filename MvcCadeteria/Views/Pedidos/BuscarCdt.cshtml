@model Pd2ViewModel

@{
    ViewData["Title"] = "Pedido | Cadete";
}

<h1>@ViewBag.estado:</h1>

<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>ID Pedido</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.id_pd2</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Observacion Pedido</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.obs</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Nombre Cliente</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.cli_nom</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Nombre Cadete Actual</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Model.cdt_nom</p>
        </dd>
        <dt class = "col-sm-2">
            <p>Estado Pedido</p>
        </dt>
        <dd class = "col-sm-10">
            <p>@Enum.GetName(typeof(Pedido.Estados),Model.estado)</p>
        </dd>
    </dl>
</div>

<div>
    <form asp-controller="Pedido" asp-action="BuscarCadete">
        
    </form>
</div>
<h3>LISTADO DE CADETES</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                <p>Id</p>
            </th>
            <th>
                <p>Nombres</p>
            </th>
            </th>
            <th>
                <p>Domicilio</p>
            </th>
            <th>
                <p>Telefono</p>
            </th>
            <th>
                <p>Acci√≥n</p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.listCdt) {
        <tr>
            <td>
                <p>@item.id</p>
            </td>
            <td>
                <p>@item.nombre</p>
            </td>
            <td>
                <p>@item.domicilio</p>
            </td>
            <td>
                <p>@item.telefono</p>
            </td>
            <td>
                <form asp-controller="Pedidos" asp-action="CargarCdt">
                    <input type="hidden" asp-for="@Model.id_pd2" />
                    <input type="hidden" type="radio" name="id_cdt" value="@item.id" checked/>
                    <input type="submit" value="Seleccionar" />
                </form>
                @* <a asp-action="Info" asp-route-id="@item.id">Seleccionar</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index" class="btn btn-primary">Volver</a>
</div>
