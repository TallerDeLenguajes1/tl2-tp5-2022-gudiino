@model MvcCadeteria.ViewsModels.UsuarioViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div  class="form-signin w-100 m-auto">
    <h1>@ViewData["Title"]</h1>
    <div class="col-md-4">
        <form asp-action="Login" class="row login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.nom_u" class="control-label"></label>
                <input asp-for="@Model.nom_u" class="form-control" />
                <span asp-validation-for="@Model.nom_u" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.pass_u" class="control-label"></label>
                <input asp-for="@Model.pass_u" class="form-control" />
                <span asp-validation-for="@Model.pass_u" class="text-danger"></span>
            </div>
            <div class="form-group" class="text-danger">
                <p>@ViewBag.msg</p>
                <p>@ViewBag.Error</p>
            </div>
            <div class="form-group">
                <input type="submit" value="INGRESAR" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}